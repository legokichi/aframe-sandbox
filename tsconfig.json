{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": false,
        "alwaysStrict": true,
        "noEmitOnError": true,
        "noErrorTruncation": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "lib": ["es2019","dom"],
        "target": "ES2019"
    },
    "include": [
        "./src/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
